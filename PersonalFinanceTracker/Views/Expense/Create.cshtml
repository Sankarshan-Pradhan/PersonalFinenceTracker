@model Expense
@{
    ViewData["Title"] = "Add Expense";
}
<h2>Add Expense</h2>
<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()  <!-- For security -->
    <div>
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" step="0.01" required />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Category"></label>
        <input asp-for="Category" required />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" required />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <button type="submit">Add Expense</button>
</form>

<a asp-action="Index">Go to Income List</a>