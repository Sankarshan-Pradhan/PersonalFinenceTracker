@model PersonalFinanceTracker.Models.Income

@{
    ViewData["Title"] = "Add Income";
}

<h2>Add Income</h2>

<form asp-controller="Income" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label asp-for="Source"></label>
        <input asp-for="Source" required />
        <span asp-validation-for="Source" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" step="0.01" required />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Frequency"></label>
        <input asp-for="Frequency" required />
        <span asp-validation-for="Frequency" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" required />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <button type="submit">Add Income</button>
</form>

<a asp-action="Index">Go to Income List</a>
