@model IEnumerable<PersonalFinanceTracker.Models.Income>

@{
    ViewData["Title"] = "My Income";
}

<h2>My Income</h2>

<a asp-action="Create">➕ Add Income</a>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Source</th>
            <th>Amount</th>
            <th>Frequency</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Source</td>
                <td>@item.Amount</td>
                <td>@item.Frequency</td>
                <td>@item.Date.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Home/Index">Back to Dashboard</a>
